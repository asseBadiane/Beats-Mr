#: import track track
#: import play_indicator play_indicator

MainWidget:

<ControlButton@Button>:
  


<MainWidget>:
    tracks_layout: tracks
    play_indicator_widget: play_indicator_widget
    BoxLayout:
        orientation: "vertical"
        # top layout
        BoxLayout:
            size_hint_y: None
            height: dp(50)
            ControlButton:
                text: "PLAY"
                on_press: root.on_play_button_pressed()
            ControlButton:
                text: "STOP"
                on_press: root.on_stop_button_pressed()
            ControlButton:
                text: "-"
                size_hint_x: None
                width: dp(50)
                on_press: root.bpm -= 5
            Label:
                text: str(root.bpm)
                size_hint_x: None
                width: dp(80)
            ControlButton:
                text: "+"
                size_hint_x: None
                width: dp(50)
                on_press: root.bpm += 5
               
        # Bottom layout
        RelativeLayout:
            Image:
                source: "images/background.jpg"
                allow_stretch: True # tu peux changer ta taille
                keep_ratio: False # tu peux te d√©former
            BoxLayout:
                orientation: "vertical"
                x: dp(16)
                y: dp(16)
                size_hint: None, None
                size: (self.parent.width - dp(32), self.parent.height - dp(32))
                PlayIndicatorWidget:
                    id: play_indicator_widget
                    size_hint_y: None
                    height: dp(10)
                    left_align: root.TRACK_STEP_LEFT_ALIGN
                    
                BoxLayout:
                    orientation: "vertical"
                    id: tracks